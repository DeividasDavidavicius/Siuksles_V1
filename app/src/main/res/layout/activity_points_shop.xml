<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointsShopActivity"
    android:background="@color/mainBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pointsShopPageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points Shop"
            android:textSize="40dp"
            android:textColor="@color/mainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/baseline_settings_24"
        android:foreground="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:textColor="@color/mainText"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
            android:id="@+id/pointCountNameView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Current point amount:"
            android:textColor="@color/mainText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pointCountView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="392dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buyView1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textColor="@color/mainText"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

                <TextView
                    android:id="@+id/buyView2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/buyView3"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton3"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

                <TextView
                    android:id="@+id/buyView4"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton4"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/buyView5"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton5"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

                <TextView
                    android:id="@+id/buyView6"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton6"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:text="Buy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buyView7"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton7"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:layout_height="wrap_content"
                    android:text="Buy" />

                <TextView
                    android:id="@+id/buyView8"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainText"
                    android:textAlignment="center"
                    android:text="Temp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buyButton8"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/mainButton"
                    android:textColor="@color/mainText"
                    android:layout_height="wrap_content"
                    android:text="Buy" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>